generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id            Int       @id @default(autoincrement())
  name          String    @db.Char(200)
  email         String    @db.Char(100)
  password      String    @db.Char(200)
  date_of_birth String    @db.Char(200)
  Profile       Profile[]
}

model Profile {
  id         Int    @id @default(autoincrement())
  account_id Int
  name       String @db.Char(100)

  account       Account         @relation(fields: [account_id], references: [id])
  Watchlist     Watchlist[]
  WatchedMovies WatchedMovies[]

  @@index([account_id])
}

model Watchlist {
  movie_id   Int
  profile_id Int
  category   String @db.Char(100)

  profile Profile @relation(fields: [profile_id], references: [id])

  @@id([movie_id, profile_id])
  @@index([profile_id])
}

model WatchedMovies {
  movie_id   Int
  profile_id Int

  profile Profile @relation(fields: [profile_id], references: [id])

  @@id([movie_id, profile_id])
  @@index([profile_id])
}
